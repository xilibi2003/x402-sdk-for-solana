{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "types": ["node"]
  },
  "include": [
    "lib/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "scripts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "lib/x402/paywall/**",
    "lib/x402-express/session-token.ts"
  ]
}
